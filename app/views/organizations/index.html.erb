<h1>Organizations</h1>

<% if current_user.organizations.empty? %>
  <p>You are currently not a part of any organizations.</p>
<% else %>
  <div class='organization_list'>
    <ul>
      <% current_user.organizations.each do |o| %>
        <li><%= link_to "#{o.name}", organization_path(o) %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<p><%= link_to 'Create new organization', new_organization_path %></p>